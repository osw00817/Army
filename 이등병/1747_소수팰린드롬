#include <iostream>
#include <cmath>
#include <string>
using namespace std;

int main() {
    int num;
    std::cin >> num;  
    int list[1000001];
    
    for(int i = 2;i<1000000;i++) {
        list[i] = i;
    }
    
    for(int i = 2;i<=sqrt(1000000);i++) {
        if(list[i] == 0)
            continue;
        for(int j = i*i;j<=1000000;j+=i)
            list[j] = 0;
    }

    for(int i = num;i<=1000000;i++) {
        if(list[i] != 0) {
            string tmp = to_string(list[i]);
            int size = 0;
            int tmp1 = list[i];
    
            while(tmp1 > 0) {
                tmp1 /= 10;
                size++;
            }
            //팰린드론 검사
            for(int j=0;j<(size%2==1 ? size/2+1 : size/2);j++) {
                if(tmp[j] != tmp[size-1-j]) {
                j = (size%2==1 ? size/2+1 : size/2);
                break;
            }
            std::cout << tmp;
            return 0;
            }
        }
    }
    return 0;
}
